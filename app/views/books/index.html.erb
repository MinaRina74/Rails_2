
<h1>Books</h1>

<table>
    <thead>
        
        <tr>Title</tr><tr>Body</tr>
        
<% @books.each do |book| %>


<div><span><%= book.title %></span>
<span><%= book.body %></span>
<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
</div>

       <% end %>
</thead>

</table>

